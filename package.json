{
  "name": "hopshare-frontend",
  "version": "1.0.1",
  "private": true,
  "description": "HopShare React Frontend - Intuitive carpooling interface",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md,json}\"",
    "cypress:open": "cypress open",
    "test:e2e": "cypress run --browser electron --headed",
    "test:e2e:headless": "cypress run --browser electron --headless"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "axios": "^1.7.7",
    "classnames": "^2.5.1",
    "date-fns": "^3.3.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.5",
    "react-router-dom": "^6.27.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^3.2.5",
    "react-scripts": "5.0.1",
    "cypress": "^13.15.0"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
}

